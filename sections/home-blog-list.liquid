<section class="section">
  <div class="container">
    <div class="content">
      <h2>{{section.settings.blog_list_title}}</h3>
    </div>
    
    <div class="columns {% if section.settings.blog_list_count > 4 %} is-multiline{% endif %}">
      {% assign blog = blogs[section.settings.blog_list_blog] %}
      {% for article in blog.articles limit: section.settings.blog_list_count %}
        <div class="column {% if section.settings.blog_list_count > 4 %} is-one-quarter{% endif %}">
          {% include 'article-list-item-home' %}
        </div>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Blog List",
  "settings": [
    {
      "type": "text",
      "id": "blog_list_title",
      "label": "Blog List Title"
    },
    {
      "type": "blog",
      "id": "blog_list_blog",
      "label": "Blog List"
    },
    {
      "type": "range",
      "id": "blog_list_count",
      "min": 1,
      "max": 12,
      "step": 1,
      "label": "Blog List Count",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "blog_list_show_excerpt",
      "label": "Show Excerpt"
    }
  ],
  "presets": [
    {
      "category": "Content",
      "name": "Blog List"
    }
  ]
}
{% endschema %}
