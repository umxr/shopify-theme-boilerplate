<!-- /snippets/social-sharing.liquid -->
<div class="social-sharing">

  {% if settings.share_facebook %}
    <a href="//www.facebook.com/sharer.php?u={{ shop.url | append: share_permalink }}" target="_blank"  class="icon">
      <i class="fab fa-facebook"></i>
    </a>
  {% endif %}

  {% if settings.share_twitter %}
    <a href="//twitter.com/share?text={{ share_title | url_param_escape }}&amp;url={{ shop.url | append: share_permalink }}" target="_blank"  class="icon">
      <i class="fab fa-twitter"></i>
    </a>
  {% endif %}

  {% if settings.share_pinterest %}
    <a href="//pinterest.com/pin/create/button/?url={{ shop.url | append: share_permalink }}&amp;media={{ share_image | img_url: '1024x1024' }}&amp;description={{ share_title | url_param_escape }}" target="_blank"  class="icon">
      <i class="fab fa-pinterest"></i>
    </a>
  {% endif %}

</div>
