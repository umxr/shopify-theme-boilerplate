<section class="section">
  <div class="has-text-centered content container">
    <div class="columns is-centered">
      <div class="form-reset-password">
        {% form 'reset_customer_password' %}
          <h1>{{ 'customer.reset_password.title' | t }}</h1>

          <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

          {% if form.errors %}
          <div class="notification is-danger">
            {{ form.errors | default_errors }}
          </div>
          {% endif %}

          <div class="field">
            <label for="CustomerEmail" class="label">
              {{ 'customer.reset_password.password' | t }}
            </label>
            <div class="control">
              <input type="password"
                name="customer[password]"
                id="ResetPassword"
                class="input {% if form.errors contains 'password' %}is-danger{% endif %}"
                placeholder="{{ 'customer.reset_password.password' | t }}">
            </div>
          </div>

          <div class="field">
            <label for="CustomerEmail" class="label">
              {{ 'customer.reset_password.password_confirm' | t }}
            </label>
            <div class="control">
              <input type="password"
                name="customer[password_confirmation]"
                id="PasswordConfirmation"
                class="input {% if form.errors contains 'password_confirmation' %}is-danger{% endif %}"
                placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
            </div>
          </div>

          <div class="field is-grouped is-grouped-centered">
            <div class="control">
              <input type="submit" class="button is-primary is-centered" value="{{ 'customer.reset_password.submit' | t }}">
            </div>
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</section>
