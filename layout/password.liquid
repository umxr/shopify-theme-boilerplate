<!doctype html>
<!--[if IE 9]> <html class="ie9 no-js" lang="{{ shop.locale }}"> <![endif]-->
<!--[if (gt IE 9)|!(IE)]><!--> <html class="no-js" lang="{{ shop.locale }}"> <!--<![endif]-->
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <meta name="theme-color" content="{{ settings.color_primary }}">
  <link rel="canonical" href="{{ canonical_url }}">

  {% if settings.favicon != blank %}
    <link rel="shortcut icon" href="{{ settings.favicon | img_url: '32x32' }}" type="image/png">
  {% endif %}

  <title>{{ shop.name }}</title>

  {% if page_description %}
    <meta name="description" content="{{ page_description | escape }}">
  {% endif %}

  {% include 'social-meta-tags' %}

  {{ 'style.css' | asset_url | stylesheet_tag }}

  <!--[if (gt IE 9)|!(IE)]><!--><script src="{{ 'scripts.min.js' | asset_url }}" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="{{ 'scripts.min.js' | asset_url }}"></script><![endif]-->

  <!--[if (gt IE 9)|!(IE)]><!--><script src="https://use.fontawesome.com/00602201c1.js" defer="defer"></script><!--<![endif]-->
  <!--[if lt IE 9]><script src="https://use.fontawesome.com/00602201c1.js" defer="defer"></script><![endif]-->

  {{ content_for_header }}
</head>

<body class="template-password">
  <section class="hero is-primary is-bold">
    <div class="hero-body">
      <div class="container">
        <h1 class="title" itemscope itemtype="http://schema.org/Organization">
          {{ shop.name }}
        </h1>
        <h2 class="subtitle">
          {{ 'general.password_page.opening_soon' | t }}
        </h2>
      </div>
    </div>
  </section>

  <main role="main" id="MainContent">
    {{ content_for_layout }}
  </main>

  <footer class="footer">
    <div class="container">
      <div class="content has-text-centered">
        <p>{{ 'general.password_page.admin_link_html' | t }}</p>
      </div>
    </div>
  </footer>
</body>
</html>
